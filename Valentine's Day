function hideAll(){
  document.querySelectorAll('.card').forEach(c=>c.classList.add('hidden'));
}

function generate(){
  let f=from.value.trim(), t=to.value.trim(), tp=type.value;
  if(!f||!t||!tp){alert("Fill all fields");return;}
  let m=messages[tp][Math.floor(Math.random()*10)];
  let data=btoa(JSON.stringify({f,t,m}));
  let link=location.origin+location.pathname+"?v="+data;
  hideAll();
  sentBox.classList.remove("hidden");
  shareLink.value=link;
}

function copy(){
  shareLink.select();
  document.execCommand("copy");
  alert("Link copied ğŸ˜Œ");
}

function shareWhatsApp(){
  let text="ğŸ’˜ I sent you a Valentineâ€¦ only you can see it ğŸ˜Œ\n\n"+shareLink.value;
  window.open("https://wa.me/?text="+encodeURIComponent(text));
}

const p=new URLSearchParams(location.search);
if(p.get("v")){
  let d=JSON.parse(atob(p.get("v")));
  hideAll();
  coverBox.classList.remove("hidden");
  window.card=d;
}

function openCard(){
  hideAll();
  receiveBox.classList.remove("hidden");
  msg.innerText=card.m;
  names.innerText="From: "+card.f+" â†’ To: "+card.t;
}

function showAbout(){ hideAll(); aboutPage.classList.remove("hidden"); }
function showContact(){ hideAll(); contactPage.classList.remove("hidden"); }
function reloadHome(){ window.location.href=location.pathname; }
